@page
@model ModularMonolithModule.IndexModel
<div class="container-xl">
    <div class="row">
        <div class="col-12">
            <h1>ModularMonolithModule</h1>
        </div>
    </div>
    <div class="row row-deck row-cards">
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    @foreach(var item in Model.Widgets)
                    {
                        <div>@item.Name (@item.Price.ToString("C")</div>
                    }
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card">
                <div class="card-body" style="height: 10rem"></div>
            </div>
        </div>
        <div class="col-4">
            <div class="card">
                <div class="card-body" style="height: 10rem"></div>
            </div>
        </div>
        <div class="col-12">
            <div class="card">
                <div class="card-body" style="height: 10rem"></div>
            </div>
        </div>
    </div>
</div>